{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@assets/*": ["../assets/*"],
      "@data/*": ["../src/data/*"],
      "@telas/*": ["../src/telas/*"],
      "@ui/*": ["../src/ui/*"]
    },
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
